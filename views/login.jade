- if ('undefined' !== typeof errors && errors.length)
  ul#errors
    - each error in errors
      li.error= error
form(action='/login', method='post')
  #email
    label(for=everyauth.password.emailFormFieldName) Email
    input(type='email', name=everyauth.password.emailFormFieldName, value=login)
  #password
    label(for=everyauth.password.passwordFormFieldName) Password
    input(type='password', name=everyauth.password.passwordFormFieldName)
  #submit
    input(type='submit') Login
